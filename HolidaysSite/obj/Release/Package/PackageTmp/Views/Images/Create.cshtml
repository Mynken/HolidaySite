@model HolidaysSite.Models.ImageModel.Image

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Create", "Images", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <h2>Форма создания</h2>
        <div class="editor-label">
            @Html.LabelFor(model => model.Description)
        </div>
        <br />
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Description,
           new { @class = "form-control", rows = 10 })
            <br />
            @Html.ValidationMessageFor(model => model.Description)
        </div>        
        <div class="editor-label">
            <label>Файлы:</label>
        </div>
        <div class="editor-field">
            <input type="file" name="file" multiple="multiple" />
        </div>
        <br />
        <p>
            <input type="submit" value="Создать" class="btn btn-success" style="margin-right:5px" />
            @Html.ActionLink("Назад", "Index", new { }, htmlAttributes: new { @class = "btn btn-danger" })
        </p>
    </fieldset>
}

@section Scripts {
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}
